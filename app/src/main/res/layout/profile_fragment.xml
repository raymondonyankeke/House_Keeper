<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

                <TextView
                    android:id="@+id/account_email_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="test@email.com"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="16dp"/>


            <TextView
                android:id="@+id/account_id_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="ID Number"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

                <Button
                    android:id="@+id/account_change_email_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:text="Change E-mail"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/account_change_password_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Change Password"/>

            </LinearLayout>

        <Button
            android:id="@+id/register_as_maid_button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Register As Maid"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="visible"
            android:layout_marginTop="32dp"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>