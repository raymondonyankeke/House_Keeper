<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ChangePasswordActivity"
    android:orientation="vertical"
    android:layout_margin="24dp">

    <EditText
        android:id="@+id/change_email_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/confirm_change_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/new_change_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/confirm_change_password_button"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="@color/colorWhite"
        android:text="Confirm"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

</LinearLayout>