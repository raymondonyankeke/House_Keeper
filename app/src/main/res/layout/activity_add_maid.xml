<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddMaidActivity"
    android:layout_margin="32sp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Maid"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add an Image"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:paddingStart="16dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>


            <EditText
                android:id="@+id/maid_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/colorBlack"
                android:textColorHighlight="@color/colorBlack"
                android:hint="Name"/>

            <EditText
                android:id="@+id/maid_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/colorBlack"
                android:textColorHighlight="@color/colorBlack"
                android:hint="Contact Number"/>

            <EditText
                android:id="@+id/maid_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/colorBlack"
                android:textColorHighlight="@color/colorBlack"
                android:minLines="10"
                android:maxLines="35"
                android:hint="Description"/>

            <Button
                android:id="@+id/submit_maid_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Submit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/colorBlack"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>